{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeMinor",
    ":automergeDigest"
  ],
  "timezone": "America/New_York",
  "schedule": [
    "at any time"
  ],
  "labels": [
    "dependencies"
  ],
  "assigneesFromCodeOwners": true,
  "reviewersFromCodeOwners": true,
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Homebrew formula versions",
      "managerFilePatterns": [
        "/^.+\\.rb$/"
      ],
      "matchStrings": [
        "url \"https://github\\.com/(?<depName>[^/]+/[^/]+)/releases/download/(?<currentValue>v[^/\"]+)/[^\"]+\"\\s+sha256 \"(?<currentDigest>[a-f0-9]{64})\""
      ],
      "extractVersionTemplate": "^v(?<version>.*)$",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "custom.regex"
      ],
      "matchDepNames": [
        "mattstruble/git-ai"
      ],
        "commitMessage": "Update git-ai to {{newVersion}}",
      "prBody": "This PR updates the git-ai Homebrew formula to version {{newVersion}}.\n\n**Changes:**\n- Binary URLs updated to point to new release binaries\n- SHA256 hashes updated for all supported platforms:\n  - macOS (Intel & Apple Silicon)\n  - Linux (x86_64 & ARM64)\n\n**Release Notes:** [{{newVersion}}]({{sourceUrl}}/releases/tag/{{newVersion}})",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "ignoreTests": false
    }
  ]
}
