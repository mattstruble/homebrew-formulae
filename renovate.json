{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeMinor",
    ":automergeDigest"
  ],
  "timezone": "America/New_York",
  "schedule": [
    "at any time"
  ],
  "labels": [
    "dependencies"
  ],
  "assigneesFromCodeOwners": true,
  "reviewersFromCodeOwners": true,
  "homebrew": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": [
        "homebrew"
      ],
      "matchDepNames": [
        "git-ai"
      ],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "ignoreTests": false
    }
  ]
}
