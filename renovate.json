{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeMinor",
    ":automergeDigest"
  ],
  "timezone": "America/New_York",
  "schedule": [
    "at any time"
  ],
  "labels": [
    "dependencies"
  ],
  "assigneesFromCodeOwners": true,
  "reviewersFromCodeOwners": true,
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Homebrew formula versions",
      "managerFilePatterns": [
        "/^.+\\.rb$/"
      ],
      "matchStrings": [
        "url \"https://github\\.com/(?<depName>[^/]+/[^/]+)/archive/refs/tags/(?<currentValue>v[^/\"]+)\\.tar\\.gz\"\\s+sha256 \"(?<currentDigest>[a-f0-9]{40,64})\""
      ],
      "datasourceTemplate": "github-releases", 
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "custom.regex"
      ],
      "matchDepNames": [
        "mattstruble/git-ai"
      ],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "ignoreTests": false
    }
  ]
}
